<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaohei.repository.mapper.TaskMapper">

    <sql id="tabla_name">t_task</sql>

    <select id="getTaskPage" resultType="com.xiaohei.repository.po.Task">
        select
        *
        from
        <include refid="tabla_name"/>
        <where>
            <if test="query.type != null">
                and `type` = #{query.type}
            </if>
            <if test="query.taskName != null">
                and task_name like CONCAT('%',#{query.taskName},'%')
            </if>
            <if test="query.status != null">
                and status = #{query.status}
            </if>
            <if test="query.creator != null">
                and creator = #{query.creator}
            </if>
            and is_deleted = 0
        </where>
        order by update_time desc
    </select>

</mapper>
